{
"compilerOptions": {
    "target": "es6",
    "allowJs": false,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
        "@fardel/*": [
            "packages/*/src"
        ]
    },
    "outDir": "./types",
    "declaration": true,
    "types": []
},
"exclude": [
    "node_modules",
    "**/dist/**",
    "**/lib/**",
    "**/test/**",
    "**/types/**",
    "rollup.config.js"
],
"ts-node": {
    "files": true,
    "compilerOptions": {
        "esModuleInterop": true
    }
}
}